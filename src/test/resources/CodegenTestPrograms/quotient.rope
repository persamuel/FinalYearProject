int quotient(int numerator, int denominator);
int remainder(int numerator, int denominator);

/* The output on stdout should be 6,1
 */
int main(int argc, char[][] argv) {
    print(quotient(25, 4));
    print(',');
    print(remainder(25, 4));
    return 0;
}

int remainder(int numerator, int denominator) {
    int x;

    x = quotient(numerator, denominator);

    return numerator - (x * denominator);
}

int quotient(int numerator, int denominator) {
    int fraction;
    int remainder;

    fraction = 0;
    remainder = numerator;

    while (remainder >= denominator) {
        remainder = remainder - denominator;
        fraction  = fraction + 1;
    }

    return fraction;
}